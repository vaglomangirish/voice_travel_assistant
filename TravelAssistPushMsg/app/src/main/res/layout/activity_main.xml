<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="voicetravelassist.android.mobiperv.iu.edu.travelassistpushmsg.MainActivity">

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walk_straight"
        android:height="110dp"
        android:width="110dp"
        android:id="@+id/straight"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="sendPushMsg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_left"
        android:height="110dp"
        android:width="110dp"
        android:id="@+id/left"
        android:layout_row="1"
        android:layout_column="0"
        android:nestedScrollingEnabled="false"
        android:onClick="sendPushMsg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:height="110dp"
        android:width="110dp"
        android:id="@+id/stop"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="sendPushMsg"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:background="#e96565"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_right"
        android:height="110dp"
        android:width="110dp"
        android:id="@+id/right"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="sendPushMsg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walk_back"
        android:height="110dp"
        android:width="110dp"
        android:id="@+id/back"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="sendPushMsg" />

</GridLayout>
</RelativeLayout>
